.container(ng-controller='FooterCtrl')
    .row.fill(style="padding-top:230px")
      .col-sm-offset-4.col-sm-4.col-sm-offset-4.center-text
        .input-group.input-group-sm
          span.input-group-addon(style = "width: 120px;") Radio Address
          input.form-control(ng-model="radioAddr", placeholder="Radio Address")
    .row.fill(style="padding-top:10px")
      .col-sm-offset-4.col-sm-4.col-sm-offset-4.center-text
        .input-group.input-group-sm
          span.input-group-addon(style = "width: 120px;") COM Port
          input.form-control(ng-model="portPath", placeholder="Select a COM Port")
    .row.fill(style="padding-top:10px")
      .col-sm-offset-4.col-sm-4.col-sm-offset-4.center-text
          button#com-ports.btn.btn-default.droptown-toggle(type="button", data-toggle="dropdown") Available COM Ports
          span.caret
        ul.dropdown-menu(role="menu", aria-labelledby="com-ports")
          li.disabled(role="presentation", ng-show="portPathList.length == 0")
            a(role="menuitem", tabindex="-1", href="#") No Ports Detected
          li(role="presentation", ng-repeat="port in portPathList")
            a(role="menuitem", tabindex="-1", href="#", ng-click="assignPortPath(port)") {{port}}
    .row.fill(style="padding-top:10px")
      .col-sm-offset-4.col-sm-4.col-sm-offset-4.center-text
        button.btn.btn-success(ng-click="radio.init(radioAddr, portPath)") Init
        button.btn.btn-danger(ng-click="radio.close()") Close
    .row.fill(style="padding-top:10px")
      .col-sm-offset-4.col-sm-4.col-sm-offset-4.center-text
        span.label.label-success(ng-show="radio.initialized()") Radio initialized
        span.label.label-danger(ng-hide="radio.initialized()") Radio not initialized