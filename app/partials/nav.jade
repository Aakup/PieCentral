mixin navigation
  .container-fluid
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Daemon
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li(ng-class="getClass('/control')")
            a(href='#/control') Control
          li(ng-class="getClass('/edit')")
            a(href='#/edit') Edit
          li(ng-class="getClass('/simulate')")
            a(href='#/simulate') Debug Information


.navbar.navbar-main.navbar-fixed-top(role='navigation')
  +navigation()

.navbar.navbar-main.navbar-fixed-spacer(role='navigation')
  +navigation()
